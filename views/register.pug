extends layout

block content
  br
  h1 Register Account
  form(method="POST", action="/auth/register")
    #form-group
      label Username:
      input.form-control(name="username", type="text")
    #form-group
      label Email:
      input.form-control(name="email", type="email")
    #form-group
      label Password:
      input.form-control(name="password", type="password")
    #form-group
      label Confirm Password:
      input.form-control(name="password_confirm", type="password")
    br
    input.btn.btn-primary(type="submit", value="Register")